# Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=DentalAssessment API
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://dental_user:dental_password@localhost:5432/dental_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=dental-images
MINIO_SECURE=false

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Configuration
MODEL_DIR=./models
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/tiff

# Quantum Configuration
QUANTUM_BACKEND=default.qubit
QUANTUM_SHOTS=1024
QUANTUM_THREADS=4
QUANTUM_NOISE_MODEL=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Performance Configuration
CACHE_TTL=3600  # 1 hour
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Testing Configuration
TEST_DATABASE_URL=postgresql://dental_user:dental_password@localhost:5432/dental_test_db
TEST_REDIS_URL=redis://localhost:6379/1

# Development Settings
ENABLE_PROFILING=false
ENABLE_DEBUG_ROUTES=false
AUTO_RELOAD=true